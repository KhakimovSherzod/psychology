generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int       @id @default(autoincrement())
  name         String
  phone        String    @unique
  pin          String
  uuid         String    @unique @default(uuid())
  createdAt    DateTime  @default(now())
  lastLogin    DateTime?
  profileImage String?
  role         Role      @default(USER)
  deviceId     String[]
}

model CourseCategory {
  id        String   @id @default(uuid())
  name      String   @unique
  description String
  createdAt DateTime @default(now())
  courses   Course[]
}

model Course {
  id           String         @id @default(uuid())
  title        String
  description  String
  subtitles    String
  videoUrl     String
  thumbnailUrl String
  categoryId   String
  category     CourseCategory @relation(fields: [categoryId], references: [id])
  status       Status
  level        Level
  price        Float
  createdAt    DateTime  @default(now())
  publishedAt  DateTime?
  updatedAt    DateTime  @updatedAt
  playlistId   String?
  order        Int?
  playlist     Playlist? @relation(fields: [playlistId], references: [id])
}

model Playlist {
  id                   String   @id @default(uuid())
  title                String
  description          String
  playlistThumbnailUrl String
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt
  courses              Course[]
}

enum Role {
  USER
  ADMIN
  OWNER
}

enum Level {
  BEGINNER
  INTERMEDIATE
  ADVANCED
}

enum Status {
  DRAFT
  UNLISTED
  PUBLISHED
}
