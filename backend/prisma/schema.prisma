datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id                    Int       @id @default(autoincrement()) // internal numeric ID
  uuid                  String    @unique @default(uuid())      // public/external ID
  name                  String
  role                  Role      @default(USER)               // enum for role
  phone                 String    @unique
  pin                   String
// nullable if free plan
  profileImage          String?                                
  deviceId              String[]  
  createdAt             DateTime  @default(now())
  lastLogin             DateTime?                              
}

// Roles
enum Role {
  USER
  ADMIN
  OWNER
}

