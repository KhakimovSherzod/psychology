generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
  OWNER
}

// ------------------ Users ------------------
model User {
  id           Int       @id @default(autoincrement())
  uuid         String    @unique @default(uuid())
  name         String
  role         Role      @default(USER)
  phone        String    @unique
  pin          String
  profileImage String?
  deviceId     String[]
  createdAt    DateTime  @default(now())
  lastLogin    DateTime?
}


// ------------------ Courses ------------------
model Course {
  id         Int        @id @default(autoincrement())
  uuid       String     @unique @default(uuid())
  title      String
  playlists  Playlist[]
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
}

// ------------------ Playlists ------------------
model Playlist {
  id          Int        @id @default(autoincrement())
  uuid        String     @unique @default(uuid())
  title       String
  description String?
  order       Int?
  courseId    Int
  course      Course     @relation(fields: [courseId], references: [id])
  videos      Video[]
  categories  Category[] @relation("PlaylistCategories")
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

// ------------------ Videos ------------------
model Video {
  id          Int        @id @default(autoincrement())
  uuid        String     @unique @default(uuid())
  title       String
  description String?
  playbackUrl String
  order       Int?
  playlistId  Int
  playlist    Playlist   @relation(fields: [playlistId], references: [id])
  categories  Category[] @relation("VideoCategories")
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

// ------------------ Categories ------------------
model Category {
  id          Int        @id @default(autoincrement())
  uuid        String     @unique @default(uuid())
  name        String     @unique
  videos      Video[]    @relation("VideoCategories")
  playlists   Playlist[] @relation("PlaylistCategories")
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}
